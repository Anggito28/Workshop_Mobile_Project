<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/iv_checkout_item_img"
        android:layout_width="74dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_checkout_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Judul Produk"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Subtitle1" />

        <TextView
            android:id="@+id/tv_checkout_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 200.000,00"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Caption"
            android:textColor="@color/material_on_surface_emphasis_medium" />

        <TextView
            android:id="@+id/tv_checkout_item_subtotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(x 2) â€¢ Rp 200.000,00"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Caption"
            android:textColor="@color/green_700" />

        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="?android:attr/listDivider" />
    </LinearLayout>
</LinearLayout>